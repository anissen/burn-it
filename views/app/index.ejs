
<div class="page-header">
	<h1>App</h1>
</div>

<div class="row">
  <div class="span2">
    <h3>Sprint</h3>
  </div>

  <div class="pagination">
    <ul>
      <li><a href="#">Prev</a></li>
      <% for (var i = 2; i <= 10; i += 2) { %>
      <li <% if (i == 3) { %> class="active" <% } %>>
        <a href="#">Week <%= i %>-<%= i+2 %>, 2012</a>
      </li>
      <% } %>
      <li><a href="#">Next</a></li>
    </ul>
  </div>

  <!-- <a href="#" class="btn">Add sprint</a> -->
</div>


<div class="row">
	<div class="span2">
		<h3>Sprint day</h3>
	</div>

  <div class="pagination">
    <ul>
      <li><a href="#">Prev</a></li>
      <% for (var i = 1; i <= 10; i++) { %>
      <li <% if (i == 3) { %> class="active" <% } %>>
        <a href="#">Day <%= i %></a>
      </li>
      <% } %>
      <li><a href="#">Next</a></li>
    </ul>
  </div>
</div>


<div class="row">
	<div class="span12">
    <form>
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>Developer ID</th>
            <th>On team</th>
            <th>Focus</th>
            <th>Burn down</th>
          </tr>
        </thead>
        <tbody>
          <% var devs = ["ANNI", "FNS", "DRIIS", "OLLS"]; %>
          <% for (var i in devs) { %>
          <tr>
            <td><i class="icon-user"></i> <strong><%= devs[i] %></strong></td>
            <td><input type="text" class="span3" placeholder="On team"></td>
            <td>
              <input type="text" class="span3" placeholder="Focus">
              <i class="icon-question-sign" rel="tooltip" title="Focus on team on a scale [1;10]"></i>
            </td>
            <td>
              <input type="text" class="span3" placeholder="Burn down">
              <i class="icon-question-sign" rel="tooltip" title="Burn down syntax:<br/>[task burn]+[task burn]+(...)<br/>E.g.: 5+2+4"></i>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button class="btn">Cancel</button>
      </div>
    </form>

	</div>
</div>